/* pages/splash/splash.wxss */
.container{
  background-color: #f2f2f2;
}
.splash{
  width: 100%;
  height: 100%;
  /*  绝对布局  */
  position: absolute;
}
.splash image{
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
  opacity: 0.9;
}
.start{
  position: absolute;
  bottom:100px;
  left: 30%;
  width: 150px;
  background-color: rgba(50,70,90,0.4);
  color: white;
  border: 1px solid #35495e;
  font-size: 20px;
}
